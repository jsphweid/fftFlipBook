{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "outDir": "./dist/package",
        "skipLibCheck": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types",
            "local-types"
        ]
    },
    "exclude": [
        "node_modules",
        "./src/**/*.test.ts"
    ],
    "include": [
        "./src/**/*"
    ]
}
